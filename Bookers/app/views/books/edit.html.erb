<h1 class=title>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<!--編集中-->
<% if @book.errors.any? %>
    <div class="error_explanation">
       <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<!--ここまで-->

<div class=field>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class=field>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div class=action>
<%= f.submit "Update Book" %>
</div>

<% end %>

<%= link_to "Show", book_path(@book), class: "link" %>
