<h1 class=title>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>

<div class=field>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class=field>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div class=action>
<%= f.submit "Update Book" %>
</div>

<% end %>

<%= link_to "Show", book_path(@book), class: "link" %>
<span> | </span>
<%= link_to "Back", books_path, class: "link"%>


