

<div class=index>

<p class="notice"><%= notice %></p>

<h1 class=index-title>Books</h1>

  <table class=index-table>
    
    <tr class=title>
      <th class=title-name>title</th>
      <th class=title-name>Body</th>
      <th class=title-name></th>
      <th class=title-name></th>
      <th class=title-name></th>
    </tr>
    
  <% @books.each do |book| %>
    <tr class=recode>
      <td class=value><p><%= book.title %></p></td>
      <td class=value><p><%= book.body %></p></td>
      <td class=value><%= link_to "Show", book_path(book.id) %></td>
      <td class=value><%= link_to "Edit", edit_book_path(book) %></td>
      <td class=value><%= link_to "Destory", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </table>

<!------------------------------------------------>

<h2 class=index-title2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div> 
  <% end %>
  
<div class=field>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class=field>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
<div class=action>
 <%= f.submit "Create Book" %>
</div>
<% end %>

</div>
