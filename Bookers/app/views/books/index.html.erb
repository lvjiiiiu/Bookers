

<div class=index>

<p class="notice"><%= notice %></p>

<h1 class=title>Books</h1>

  <table class=index-table>

    <tr class=title>
      <th class=title-name>title</th>
      <th class=title-name>Body</th>
      <th class=title-name></th>
      <th class=title-name></th>
      <th class=title-name></th>
    </tr>

  <% @books.each do |book| %>
    <tr class=recode>
      <td class=value><%= book.title %></td>
      <td class=value><%= book.body %></td>
      <td class=value><%= link_to "Show", book_path(book.id) ,class: "link"%></td>
      <td class=value><%= link_to "Edit", edit_book_path(book) ,class: "link"%></td>
      <td class=value><%= link_to "Destory", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "link"%></td>
    </tr>
  <% end %>
  </table>

<!------------------------------------------------>

<h2 class=index-title2>New book</h2>

<%= form_with model: @book, local:true do |f| %>


  
<div class=field>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class=field>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
<div class=action>
 <%= f.submit "Create Book" %>
</div>
<% end %>

</div>
