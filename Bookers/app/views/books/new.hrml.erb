
<h2 class=index-title2>New book</h2>

<%= form_with model: @book, local:true do |f| %>

<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class=field>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class=field>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
<div class=action>
 <%= f.submit "Create Book" %>
</div>
<% end %>
