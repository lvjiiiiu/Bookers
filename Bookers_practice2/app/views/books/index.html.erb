<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tr>
    <% @books.each do |book|  %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show", book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "destroy", book_path(book.id) %></td>
  </tr>
  <% end %>
</table>

<h2>NEW book</h2>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book"%>
<% end %>